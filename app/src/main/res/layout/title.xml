<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/llBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


        <ImageView
            android:id="@+id/iv_setting_left"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/setting_left"/>

        <ImageView
            android:id="@+id/iv_setting_right"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/setting_right"/>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/search"
            android:layout_toLeftOf="@+id/iv_setting_right"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>

</RelativeLayout>
